<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cordefundo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="308dp"
        android:layout_height="228dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProduto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zipzop" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonProduto"
        style="@style/Button"
        android:layout_width="162dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="Produtos"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonCaixa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCaixa"
        style="@style/Button"
        android:layout_width="162dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:text="Caixa"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonProduto"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVenda"
        style="@style/Button"
        android:layout_width="162dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Venda"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonRelatorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduto" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRelatorio"
        style="@style/Button"
        android:layout_width="162dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="RelatÃ³rios"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonVenda"
        app:layout_constraintTop_toBottomOf="@+id/buttonCaixa" />


</androidx.constraintlayout.widget.ConstraintLayout>